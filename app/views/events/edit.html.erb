<% provide(:title, "Edit Event") %>
<div class="row justify-content-center align-items-center p-5">
  <div class="col-sm-6">
    <h1>Edit your event</h1>
    <%= form_for @event do |f| %>

      <div class="field">
        <%= f.label :title %>
        <br/>
        <%= f.text_field :title, class: 'form-control' %>
        <br/>
      </div>

      <div class="field">
        <%= f.label :description %>
        <br/>
        <%= f.text_area(:description, size: "18x6", class: 'form-control') %>
        <br/>
      </div>

      <div class="field">
        <%= f.label :location %>
        <br/>
        <%= f.text_field :location, class: 'form-control' %>
        <br/>
      </div>

      <div class="field">
        <%= f.label :date %>
        <br/>
        <%= f.date_field :date, class: 'form-control' %>
        <br/>
      </div>

      <div class="field">
        <%= f.label :time %>
        <br/>
        <%= f.time_field :time, class: 'form-control' %>
        <br/>
      </div>

      <div class="actions">
        <%= f.submit "Save Changes", class: "form-control btn btn-success" %>
      </div>

    <% end %>
  </div>
</div>
