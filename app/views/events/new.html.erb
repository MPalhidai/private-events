<% provide(:title, "Create An Event") %>
<div class="row justify-content-center align-items-center">
  <div class="col-sm-4">
    <h1>Create an event</h1>
    <%= form_for @event do |f| %>

      <div class="field">
        <%= f.label :title %>
        <br/>
        <%= f.text_field :title, class: 'form-control' %>
        <br/>
      </div>

      <div class="field">
        <%= f.label :description %>
        <br/>
        <%= f.text_area(:description, size: "18x6", class: 'form-control') %>
        <br/>
      </div>

      <div class="field">
        <%= f.label :location %>
        <br/>
        <%= f.text_field :location, class: 'form-control' %>
        <br/>
      </div>

      <div class="field">
        <%= f.label :date %>
        <br/>
        <%= f.date_field :date, class: 'form-control' %>
        <br/>
      </div>

      <div class="field">
        <%= f.label :time %>
        <br/>
        <%= f.time_field :time, class: 'form-control' %>
        <br/>
      </div>

      <div class="actions">
        <%= f.submit "Create Event", class: "form-control btn btn-success" %>
      </div>

    <% end %>
  </div>
</div>
