<% provide(:title, "My Events") %>
<div class="row justify-content-center">
	<div class="col-sm-6 text-center">
		<div class="btn-group btn-group-justified">
			<%= link_to "My Future Events", user_events_path(:future => true), class: "btn btn-info btn-sm" %>
			<%= link_to "My Past Events", user_events_path(:past => true), class: "btn btn-info btn-sm" %>
			<%= link_to "All Events", events_path, class: "btn btn-info btn-sm" %>
		</div>
	</div>
</div>

<div class="row justify-content-center list">
	<div class="col-sm-8">
    <%= render 'events/event' %>
	</div>
</div>
