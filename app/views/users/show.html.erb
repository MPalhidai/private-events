<% provide(:title, "My Events") %>
<div class="row">
	<div class="col-sm-4 col-sm-offset-3">
		<div class="btn-group btn-group-justified">
			<%= link_to "Future Events", user_events_path(:future => true), class: "btn btn-info btn-sm" %>
			<%= link_to "Past Events", user_events_path(:past => true), class: "btn btn-info btn-sm" %>
			<%= link_to "Hosted Events", user_events_path(:host => true), class: "btn btn-info btn-sm" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-6 col-sm-offset-3">
		<%= @events %>
	</div>
</div>
